{
  "name": "pages",
  "version": "0.0.1",
  "private": true,
  "description": "A monorepo containing all packages used in Yext Pages rendering",
  "homepage": "https://github.com/yext/pages#readme",
  "bugs": {
    "url": "https://github.com/yext/pages/issues"
  },
  "license": "BSD-3-Clause",
  "author": "sumo@yext.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/pages.git"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "release": "tsx scripts/release.ts",
    "fmt": "oxfmt",
    "lint": "oxlint --fix",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite",
    "docs": "pnpm -r run api-extractor && pnpm -r run generate-docs && pnpm run fmt",
    "ci-verify-publish": "tsx scripts/verifyPublish.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.6",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "generate-changelog": "^1.8.0",
    "generate-license-file": "^3.6.0",
    "globals": "^15.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "minimist": "^1.2.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4"
  },
  "lint-staged": {
    "!(**/THIRD-PARTY-NOTICES)": "oxfmt",
    "*.{ts,js,tsx,jsx}": "oxlint --fix"
  },
  "engines": {
    "node": "^20.6.0 || ^22 || ^24"
  },
  "packageManager": "pnpm@9.12.3",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "^5.3.5"
      }
    }
  }
}
