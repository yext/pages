{
  "name": "sites-scripts",
  "version": "0.0.1",
  "description": "A monorepo containing all packages used in Yext Sites rendering",
  "author": "sumo@yext.com",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "build": "pnpm -r run build",
    "build:release": "pnpm -r run build:release",
    "test": "pnpm -r run test",
    "release": "tsx scripts/release.ts",
    "fmt": "prettier -w .",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite",
    "lint": "pnpm -r run lint",
    "docs": "pnpm -r run api-extractor && pnpm -r run generate-docs && pnpm run fmt",
    "ci-publish": "tsx scripts/publishCI.ts"
  },
  "engines": {
    "node": ">=17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/sites-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/yext/sites-scripts/issues"
  },
  "homepage": "https://github.com/yext/sites-scripts#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.182",
    "@types/minimist": "^1.2.2",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.10",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.12.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "generate-license-file": "^1.3.0",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "simple-git-hooks": "^2.8.0",
    "tsx": "^3.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1",
    "pre-push": "pnpm run fmt"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.5.0"
}
