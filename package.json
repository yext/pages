{
  "name": "sites-scripts",
  "version": "0.0.1",
  "description": "A monorepo containing all packages used in Yext Sites rendering",
  "private": "true",
  "main": "index.js",
  "scripts": {
    "fmt": "prettier -w .",
    "test": "npm run test -ws",
    "release": "npm-run-all release:*",
    "release:plugin": "npm --prefix packages/vite-plugin-yext-sites-ssg run release",
    "release:yss": " npm --prefix packages/yext-sites-scripts run release"
  },
  "engines": {
    "node": ">=17"
  },
  "workspaces": [
    "./packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/sites-scripts.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/yext/sites-scripts/issues"
  },
  "homepage": "https://github.com/yext/sites-scripts#readme",
  "devDependencies": {
    "prettier": "^2.6.2",
    "npm-run-all": "^4.1.5"
  }
}
