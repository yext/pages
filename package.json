{
  "name": "sites-scripts",
  "version": "0.0.1",
  "description": "A monorepo containing all packages used in Yext Sites rendering",
  "author": "sumo@yext.com",
  "license": "BSD-3-Clause",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "release": "pnpm -r run release",
    "fmt": "prettier -w .",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite",
    "lint": "pnpm -r run lint",
    "docs": "pnpm -r run api-extractor && pnpm -r run generate-docs && pnpm run fmt"
  },
  "engines": {
    "node": ">=17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/sites-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/yext/sites-scripts/issues"
  },
  "homepage": "https://github.com/yext/sites-scripts#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "generate-license-file": "^1.3.0",
    "prettier": "^2.6.2",
    "eslint": "^8.12.0"
  }
}
