{
  "name": "pages",
  "version": "0.0.1",
  "description": "A monorepo containing all packages used in Yext Pages rendering",
  "author": "sumo@yext.com",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "release": "tsx scripts/release.ts",
    "fmt": "prettier --write --cache .",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite",
    "lint": "eslint --cache --fix .",
    "docs": "pnpm -r run api-extractor && pnpm -r run generate-docs && pnpm run fmt",
    "ci-publish": "tsx scripts/publishCI.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write --cache --ignore-unknown",
    "*.{ts,js,tsx,jsx}": "eslint --cache --fix"
  },
  "engines": {
    "node": ">=17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/pages.git"
  },
  "bugs": {
    "url": "https://github.com/yext/pages/issues"
  },
  "homepage": "https://github.com/yext/pages#readme",
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.195",
    "@types/minimist": "^1.2.2",
    "@types/prompts": "^2.4.4",
    "@types/semver": "^7.5.0",
    "eslint": "^8.44.0",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "yaml": "^2.3.1",
    "generate-changelog": "^1.8.0",
    "generate-license-file": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.5.3",
    "typescript": "^5.1.6",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "tsx": "^3.12.7"
  },
  "packageManager": "pnpm@8.3.1"
}
