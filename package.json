{
  "name": "pages",
  "version": "0.0.1",
  "description": "A monorepo containing all packages used in Yext Pages rendering",
  "author": "sumo@yext.com",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r run build",
    "build:release": "pnpm -r run build:release",
    "test": "pnpm -r run test",
    "release": "tsx scripts/release.ts",
    "fmt": "prettier -w .",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite",
    "lint": "pnpm -r run lint",
    "docs": "pnpm -r run api-extractor && pnpm -r run generate-docs && pnpm run fmt",
    "ci-publish": "tsx scripts/publishCI.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write --cache --ignore-unknown",
    "*.{ts,js,tsx,jsx}": "eslint --cache --fix"
  },
  "engines": {
    "node": ">=17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/pages.git"
  },
  "bugs": {
    "url": "https://github.com/yext/pages/issues"
  },
  "homepage": "https://github.com/yext/pages#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.184",
    "@types/minimist": "^1.2.2",
    "@types/prompts": "^2.4.0",
    "@types/semver": "^7.3.12",
    "eslint": "^8.23.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "generate-changelog": "^1.8.0",
    "generate-license-file": "^1.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "tsx": "^3.9.0"
  },
  "packageManager": "pnpm@7.5.0"
}
