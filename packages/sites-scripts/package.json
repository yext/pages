{
  "name": "@yext/sites-scripts",
  "version": "0.0.23",
  "description": "The default React development toolchain provided by Yext",
  "author": "sumo@yext.com",
  "license": "BSD-3-Clause",
  "keywords": [
    "Yext",
    "React"
  ],
  "type": "module",
  "types": "dist/types/sites-scripts/src/index.d.ts",
  "main": "dist/sites-scripts/src/index.js",
  "engines": {
    "node": ">=17"
  },
  "scripts": {
    "watch": "node src/bundler --watch",
    "build": "node src/bundler.js",
    "types": "tsc",
    "fmt": "prettier -w .",
    "release": "pnpm run build && pnpm run types",
    "lint": "eslint .",
    "api-extractor": "api-extractor run --local --verbose",
    "generate-docs": "api-documenter markdown --input-folder temp --output-folder docs/api && rm -rf temp",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 8080",
    "test": "jest",
    "generate-notices": "generate-license-file --input package.json --output ./THIRD-PARTY-NOTICES --overwrite"
  },
  "bin": {
    "yss": "dist/sites-scripts/src/bin/sites-scripts.js"
  },
  "files": [
    "dist/**/*",
    "THIRD-PARTY-NOTICES"
  ],
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "chalk": "^5.0.1",
    "cli-spinners": "^2.6.1",
    "commander": "^9.1.0",
    "cross-fetch": "^3.1.5",
    "escape-html": "^1.0.3",
    "esm-module-paths": "^1.1.1",
    "express": "^4.17.3",
    "ink": "^3.2.0",
    "lodash": "^4.17.21",
    "open": "^8.4.0",
    "picocolors": "^1.0.0",
    "shelljs": "^0.8.5",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vitepress": "1.0.0-alpha.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@microsoft/api-documenter": "^7.17.9",
    "@microsoft/api-extractor": "^7.22.2",
    "@types/babel__core": "^7.1.18",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.29",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.36",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.10",
    "@types/shelljs": "^0.8.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "generate-license-file": "^1.3.0",
    "glob": "^7.2.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "rootDir": "..",
    "collectCoverageFrom": [
      "<rootDir>/sites-scripts/src/**/*.{ts,js}"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "allowSyntheticDefaultImports": true,
          "esModuleInterop": true,
          "allowJs": true
        }
      }
    },
    "verbose": true,
    "testMatch": [
      "<rootDir>/sites-scripts/src/**/*.test.{ts,js}",
      "<rootDir>/common/**/src/**/*.test.{ts,js}"
    ],
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(.+)\\.js$": "$1"
    }
  }
}
