{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/types/",
    "module": "esnext",
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["plugin"]
}
